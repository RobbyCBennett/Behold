{
	"manifest_version": 2,
	"name": "Buzzy - Focus from AFK Distractions",
	"short_name": "Buzzy",
	"description": "Get reminded every time you get distracted by a phone, person, etc.",
	"author": "Claire, Ryann, Robby",
	"version": "1.0",

	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},

	"browser_action": {
		"default_icon": "icon128.png",
		"default_popup": "configure.html"
	},

	"permissions": [
		"idle"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},

	"commands": {
		"toggleFocusMode": {
			"description": "Toggle focus mode"
		}
	}
}